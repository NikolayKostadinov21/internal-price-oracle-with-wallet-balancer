{
  "name": "wallet-balancer",
  "version": "1.0.0",
  "description": "Standalone wallet balancing service for automatic hot/cold wallet transfers based on price triggers",
  "main": "dist/main.js",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "nodemon --exec tsx main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "vitest run --environment node --globals",
    "test:watch": "vitest --environment node --globals",
    "test:ui": "vitest --ui --environment node --globals",
    "test:coverage": "vitest --coverage --environment node --globals",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "clean": "rm -rf dist data/*.sqlite",
    "setup": "yarn clean && yarn install && yarn build"
  },
  "keywords": [
    "wallet",
    "balancer",
    "crypto",
    "ethereum",
    "defi",
    "automation",
    "price-triggers"
  ],
  "author": "Internal Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/sequelize": "^6.12.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "internal-repository"
  },
  "private": true
}
